{
  "compilerOptions": {
    "target": "ES5",
    "jsx": "react",
    "experimentalDecorators": true,
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "baseUrl": "./node",
    "rootDir": "./node",
    "outDir": "lib",
    "moduleResolution": "node"
  },
  "include": ["node/index.ts"],
  "exclude": [
    "src/**/*"
  ]
}
